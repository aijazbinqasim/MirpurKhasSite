<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mps.Com | @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <partial name="_BsStyle.cshtml" />

    @RenderSection("Styles", false)

</head>

<body>
    
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark  " >
        <div class="container-fluid">
            <a class="navbar-brand" href="/css/mps.jpg">
                <img src="~/css/mps.jpg" width="100" height="80" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar" style="align-content:center"  >
                <ul class="navbar-nav me-auto navbar-expand">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Gallery">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="ContactUs">ContactUs</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Search">
                    <button class="btn btn-primary" type="button">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>
    <partial name="_BsJs.cshtml" />

    
    @RenderSection("Scripts", false)

</body>
</html>
