@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ContactUs";
}


<div class=" col-md-7">
    <h4>PERSONAL DETAIL</h4>
    <hr />
    <form asp-controller="Products" asp-action="Save" method="post" class=" row g-4">

        <div id="error-summary" asp-validation-summary="All"></div>
        <div class="col-md-6">
            <label asp-for ="FullName" class="form-label">FullName(Required)</label>
            <input asp-for="FullName" class="form-control" id="FullName">
            <span asp-validation-for="FullName"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Phone" class="form-label">Phone(Required)</label>
            <input asp-for="Phone" class="form-control" id="Phone">
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="col-12">
            <label asp-for="Email" class="form-label">EmailAddress</label>
            <input asp-for="Email" class="form-control" id="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <hr/>
        <h1>QUERY DETAIL</h1>
        <div class="col-md-6">
            <label asp-for="Subject" class="form-label">Subject(min.10 character)(required)</label>
            <input asp-for="Subject" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Message" class="form-label">Message(min.15 character)(required)</label>
            <textarea asp-for="Message" class="form-control" rows="3"></textarea>
        </div>




        <div class="mb-3 d-grid">
            <button class="btn btn-outline-primary" type="submit">Save</button>
        </div>

    </form>

   
</div>

@{
    @section Styles {
        <style>
            span, #error-summary {
                color: red;
            }
        </style>
    }

    @section Scripts {
        <script>
            function submitConfirmation() {
                var msg = confirm('Are you sure to save this product?');

                if (!msg) {
                    return false;
                }

                return true;
            }
        </script>

        <script src="~/js/jquery-3.7.0.min.js"></script>
        <script src="~/js/jquery.validate.min.js"></script>
        <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    }
}
